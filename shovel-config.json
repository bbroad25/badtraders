{
  "pg_url": "${DATABASE_URL}",
  "eth_sources": [
    {
      "name": "base-mainnet",
      "chain_id": 8453,
      "urls": ["${ALCHEMY_RPC_URL}"]
    }
  ],
  "integrations": [
    {
      "name": "erc20_transfers",
      "enabled": true,
      "sources": [
        {
          "name": "base-mainnet"
        }
      ],
      "table": {
        "name": "token_transfers",
        "columns": [
          {"name": "block_number", "type": "numeric"},
          {"name": "block_hash", "type": "bytea"},
          {"name": "transaction_hash", "type": "bytea"},
          {"name": "transaction_index", "type": "numeric"},
          {"name": "log_index", "type": "int"},
          {"name": "token_address", "type": "bytea"},
          {"name": "from_address", "type": "bytea"},
          {"name": "to_address", "type": "bytea"},
          {"name": "value", "type": "bytea"}
        ],
        "index": [
          ["token_address", "block_number"],
          ["transaction_hash"],
          ["from_address"],
          ["to_address"]
        ]
      },
      "block": [
        {"name": "block_num", "column": "block_number"},
        {"name": "block_hash", "column": "block_hash"},
        {"name": "tx_hash", "column": "transaction_hash"},
        {"name": "tx_idx", "column": "transaction_index"}
      ],
      "event": {
        "name": "Transfer",
        "type": "event",
        "anonymous": false,
        "inputs": [
          {
            "indexed": true,
            "name": "from",
            "type": "address",
            "column": "from_address"
          },
          {
            "indexed": true,
            "name": "to",
            "type": "address",
            "column": "to_address"
          },
          {
            "name": "value",
            "type": "uint256",
            "column": "value"
          }
        ]
      }
    }
  ]
}
